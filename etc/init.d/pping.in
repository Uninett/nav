#!/usr/bin/env bash
#
## info: Pings all IP devices for status monitoring.

initdir=@initdir@
BIN=@bindir@/pping.py

# Source function library.
. ${initdir}/functions

[ -x $BIN ] || exit 1

# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting pping: "
		daemon $BIN
		rc=$?
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down pping: "
		if killproc pping.py; then
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status pping.py
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

# === End of File ===
