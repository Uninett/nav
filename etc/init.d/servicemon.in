# This script controls start/stop/status of the NAV servicemon daemon.

initdir=@initdir@
user=@nav_user@
BIN=@bindir@/servicemon.py

# Source function library.
. ${initdir}/functions

[ -x $BIN ] || exit 1

# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting servicemon: "
		daemon "su - ${user} -c $BIN"
		rc=$?
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down servicemon: "
		if killproc servicemon.py; then
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status servicemon.py
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

